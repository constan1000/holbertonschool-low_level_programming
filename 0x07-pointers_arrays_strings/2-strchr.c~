#include "holberton.h"
#include <stdio.h>

/**
 * _strchr - locates a character in string
 * @s: string to besearched
 * @c: target char
 * Return: pointer to first occurrence of c or NULL if char not found
 */
char *_strchar(char *s, char c)
{
char x;
while (1)
{
x = *s++;
if (x == c)
return (s - 1);
if (!x)
return (NULL);
}
}
